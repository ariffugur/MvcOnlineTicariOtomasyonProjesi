    grafik.AddSeries(
    name: "Veriler",
    chartType:"Bubble",
    xValue: new[] { "Beyaz Eşya", "Televizyon", "Bilgisayar", "Küçük Ev Aleti" },
    yValues: new[] {500,200,345,546}
    );
    grafik.Write();

}