@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:20px;">
    <tr>
        <th>ID</th>
        <th>Departman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var k in Model)
    {

        <tr>
            <td>
                @k.DepartmanId
            </td>
            <td>
                @k.DepartmanAd
            </td>
           <td>
                <a href="/Kategori/KategoriSil/@k.KategoriID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Kategori/KategoriGetir/@k.KategoriID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Departman/DepartmanEkle" class="btn btn-info">Departman Ekle</a>



