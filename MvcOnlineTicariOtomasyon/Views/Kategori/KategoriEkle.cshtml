@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.KategoriAd,"Kategori Adı")
    @Html.TextBoxFor(x=>x.KategoriAd, new {@class="form-control"})
    <br/>
    <button class="btn btn-info" id="btn1">Kaydet</button>
    <script>
        $('#btn1').click(function () {

            alert("Kategori başarılı bir biçimde eklendi.")
        });
    </script>
</form>

